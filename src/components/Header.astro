---
import imagenPrincipal from "../assets/foto-principal.png";
---

<div class="cabecera">
    <a href="/"><img src={imagenPrincipal.src} height="90" alt="Astro Homepage" /></a>
    <div class="navegador">
        <div class="boton">
            <a href="/pokedex"><i class="fa-solid fa-hashtag fa-2xl icono-con-fondo" id="pokedex"></i></a>
            <label class="label_nav" for="pokedex">Pokedex</label>
        </div>
        <div class="boton">
           <i class="fa-solid fa-calculator fa-2xl icono-con-fondo" id="calculadora"></i>
            <label class="label_nav" for="calculadora">Calculadora</label>
        </div>
    </div>
</div>   
<style>
    .cabecera {
        /* 
        004030
        4A9782
        DCD0A8
        FFF9E5
        */
        background-color: #4a9782;
        height: 100px;
        width: 100%;
        /* border-bottom: 1px solid black; */
        position: absolute;
        top: 0;
        left: 0;
        /* padding-inline: 10px; */
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .navegador {
        height: 90px;
        width: 200px;
        /* border: 1px solid black; */
        margin-right: 10px;
        display: flex;
        align-items: center;
        justify-content: end;
        gap:10px;
    }
    .icono-con-fondo {
        background-color: #004030; /* color de fondo */
        color: #dcd0a8; /* color del Ã­cono */
        padding: 10px;
        border-radius: 50%; /* redondeado completo */
        font-size: 24px;
        width: 20px;
        height: 20px;
        text-align: center;
        line-height: 20px; /* centrar vertical */
        display: inline-flex;
        align-items: center;
        justify-content: center;
        
    }
    .icono-con-fondo:hover{
        cursor:pointer;
    }
    .label_nav {
        color: #dcd0a8;
        /* font-weight: bold; */
        font-family: "Mogra", system-ui;
    }
    .boton{
        display: flex;
        flex-direction: column ;
        align-items:center ;
    }
</style>
